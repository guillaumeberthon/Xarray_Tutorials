{
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "../../conda"
    },
    "postCreateCommand": {
        "juperlab": "cp .devcontainer/scipy2023/jupyter_lab_config.py /home/jovyan/.jupyter/jupyter_lab_config.py && jupyter lab"
    },
    "hostRequirements": {
        "cpus": 2
    },
    "customizations": {
        "codespaces": {
            "openFiles": [
                "workshops/scipy2023/README.md"
            ]
        },
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python"
            ]
        }
    }
}